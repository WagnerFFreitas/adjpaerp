# =====================================================
# ADJPA ERP API - Configuração
# =====================================================

# Porta da API
PORT=3001

# Banco de Dados PostgreSQL
DB_HOST=localhost
DB_PORT=5432
DB_NAME=adjpa_erp
DB_USER=adjpa_user
DB_PASSWORD=SenhaSeg123!

# JWT Secret (ALTERE PARA UMA CHAVE SEGURA!)
JWT_SECRET=sua_chave_secreta_muito_segura_aqui_123456789
JWT_EXPIRATION=7d

# Ambiente
NODE_ENV=production

# CORS (URLs permitidas - separadas por vírgula)
CORS_ORIGIN=http://localhost:8080,http://localhost:5173

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logs
LOG_LEVEL=info
