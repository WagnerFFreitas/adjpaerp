# =====================================================
# ADJPA ERP - Configuração Local PostgreSQL
# =====================================================

# BANCO DE DADOS LOCAL
# =====================================================

# URL completa de conexão
DATABASE_URL=postgresql://adjpa_user:SenhaSeg123!@localhost:5432/adjpa_erp

# Ou configuração separada
DB_HOST=localhost
DB_PORT=5432
DB_NAME=adjpa_erp
DB_USER=adjpa_user
DB_PASSWORD=SenhaSeg123!

# PARA REDE LOCAL (outros computadores)
# Substitua 'localhost' pelo IP do servidor
# Exemplo: DATABASE_URL=postgresql://adjpa_user:SenhaSeg123!@192.168.1.100:5432/adjpa_erp

# =====================================================
# CONFIGURAÇÃO DE SESSÃO
# =====================================================

# Chave secreta para JWT (gere uma nova)
JWT_SECRET=sua_chave_secreta_muito_segura_aqui_123456789

# Tempo de expiração do token (em dias)
JWT_EXPIRATION_DAYS=7

# =====================================================
# AMBIENTE
# =====================================================

NODE_ENV=production
VITE_APP_NAME=ADJPA ERP
VITE_APP_VERSION=1.0.0

# =====================================================
# UPLOAD DE ARQUIVOS (opcional)
# =====================================================

# Diretório para uploads
UPLOAD_DIR=./uploads

# Tamanho máximo de arquivo (em MB)
MAX_FILE_SIZE=10

# =====================================================
# EMAIL (opcional - para notificações)
# =====================================================

SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=seu-email@gmail.com
SMTP_PASSWORD=sua-senha-de-app
SMTP_FROM=noreply@adjpa.com

# =====================================================
# BACKUP (opcional)
# =====================================================

# Diretório de backups
BACKUP_DIR=./backups

# Manter backups por quantos dias
BACKUP_RETENTION_DAYS=30

# =====================================================
# NOTAS:
# 1. Copie este arquivo para .env.local
# 2. Altere as senhas e chaves secretas
# 3. Não commite o arquivo .env.local no git
# 4. Para produção, use variáveis de ambiente do sistema
# =====================================================
